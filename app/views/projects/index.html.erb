<h1 class="text-3xl font-bold text-blue-600 mb-4">Projects</h1>
<ul class="space-y-2">
  <% @projects.each do |project| %>
    <li>
      <%= link_to project.title, project_path(project), class: "text-lg text-blue-500 hover:text-blue-700" %>
    </li>
  <% end %>
</ul>

<div class="mt-6">
  <%= link_to 'New Project', new_project_path, class: "inline-block px-4 py-2 bg-orange-500 text-white font-semibold rounded hover:bg-orange-600" %>
</div>
