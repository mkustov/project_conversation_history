<%= simple_form_for @project, html: { class: "space-y-4" } do |f| %>
  <%= f.error_notification %>

  <%= f.input :status, collection: Project::VALID_STATUSES, input_html: { class: "block w-full px-3 py-2 rounded-md shadow-sm sm:text-sm" } %>
  <%= f.button :submit, class: "inline-block px-4 py-2 bg-orange-500 text-white font-semibold rounded hover:bg-orange-600" %>
<% end %>
